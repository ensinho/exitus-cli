<div class="{{folderName}}-container">
  <h3 class="header-title">{{ data?.title }}</h3>
  <div class="{{folderName}}-content">
    <p class="content-text" *ngIf="data?.description">
      {{ data?.description }}
    </p>
  </div>
  <div class="{{folderName}}-footer">
    <button mat-button color="primary" (click)="handleAction($event)">
      {{ 'COMMON.ACTION' | translate }}
    </button>
  </div>
</div>